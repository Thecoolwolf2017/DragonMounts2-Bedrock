{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "dragonmountsplus:snow_particle",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/dmp"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 64,
				"max_particles": 128
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 4.4
			},
			"minecraft:emitter_shape_point": {
				"offset": ["Math.random(-1.4, 1.4)", "Math.random(-0.6, 0.0)", "Math.random(-1.4, 1.4)"]
			},
			"minecraft:particle_initialization": {
				"per_update_expression": "variable.stuck_time = 2.0;",
				"per_render_expression": "variable.stuck_time = 2.0;"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "Math.random(1.6, 4.4)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random(-180, 180)"
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, -0.4, 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.07+variable.particle_random_1/6", "0.07+variable.particle_random_1/6"],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": ["variable.particle_random_3 < 0 ? math.round(variable.particle_random_2 * 14) * 8 + 8 : math.round(variable.particle_random_2 * 7) * 8", 96],
					"uv_size": [8, 8]
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.15
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.89": "#FFDDF4F6"
					}
				}
			}
		}
	}
}
